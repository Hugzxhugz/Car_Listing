<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage_bg"
    tools:context=".BrowseCarActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tbxMyCarSearch"
            android:layout_width="368dp"
            android:layout_height="65dp"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="2dp"
            android:ems="10"
            android:background="@drawable/text_box_border"
            android:backgroundTint="#CEEBEF"
            app:autoSizeTextType="uniform"
            android:hint="@string/message_searchbar"
            android:inputType="textPersonName"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mycarrecycler_view"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtMyCarUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: Username"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>