<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cartoonBlue"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/carSloganLogin"
        android:layout_width="198dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toTopOf="@+id/carLogoLogin"
        app:layout_constraintEnd_toEndOf="@+id/carLogoLogin"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/carLogoLogin"
        app:srcCompat="@drawable/slogan" />

    <Button
        android:id="@+id/btnMoveToCreateAccount"
        android:layout_width="284dp"
        android:layout_height="61dp"
        android:layout_marginTop="45dp"

        android:backgroundTint="@color/marineBlue"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onConfirmAddBtnClick"
        android:text="Create account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMoveToLogIn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/carLogoLogin"
        android:layout_width="243dp"
        android:layout_height="175dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car_icon" />

    <Button
        android:id="@+id/btnMoveToLogIn"
        android:layout_width="284dp"
        android:layout_height="61dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/marineBlue"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onConfirmAddBtnClick"
        android:text="Log in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carLogoLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>